<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MerchanServ.View.ListTickets">
    <ContentPage.Content>

        <StackLayout Orientation="Vertical">

            <Label Text="Tickets" HorizontalOptions="Center" VerticalOptions="Center"/>

            <StackLayout>

                <ListView x:Name="listTickets">
                    
                </ListView>

            </StackLayout>

            <StackLayout>
                <Label Text="Update Ticket" Padding="10,20" />
                <Entry x:Name="ticID" Text="ID" IsVisible="False" />
                <Entry x:Name="ticName" Keyboard="Text" Placeholder="Update Ticket Name" ></Entry>
                <Entry x:Name="ticAddress" Keyboard="Text" Placeholder="Update Ticket Address" ></Entry>
                <DatePicker x:Name="ticDate" />
                <Button Text="Update Ticket" Clicked="Button_Update" />
            </StackLayout>

        </StackLayout>
        

    </ContentPage.Content>
</ContentPage>
